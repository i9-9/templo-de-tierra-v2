generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  password      String
  reservas      Reserva[]
}

model Templo {
  id               String    @id @default(cuid())
  nombre           String
  descripcion      String
  capacidad        Int       @db.SmallInt
  precio           Decimal   @db.Decimal(10, 2)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  amenities        String[]
  camas            String[]
  descripcionCorta String
  imagenPrincipal  String
  imagenes         String[]
  slug             String    @unique
  reservas         Reserva[]
}

model Experiencia {
  id             String   @id @default(cuid())
  titulo         String
  subtitulo      String
  descripcion    String
  imagen         String
  disponibilidad String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Reserva {
  id              String        @id @default(cuid())
  temploId        String
  userId          String
  fechaInicio     DateTime
  fechaFin        DateTime
  numeroHuespedes Int           @db.SmallInt
  precioTotal     Decimal       @db.Decimal(10, 2)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  notas           String?
  estado          EstadoReserva @default(PENDIENTE)
  metodoPago      MetodoPago
  templo          Templo        @relation(fields: [temploId], references: [id])
  user            User          @relation(fields: [userId], references: [id])

  @@index([temploId, fechaInicio, fechaFin])
  @@index([userId])
}

enum EstadoReserva {
  PENDIENTE
  CONFIRMADA
  CANCELADA
  COMPLETADA
}

enum MetodoPago {
  TARJETA
  TRANSFERENCIA
  EFECTIVO
}
